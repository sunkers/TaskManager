<div class="col-span-2 bg-secondary text-white flex flex-col justify-between" style="height: calc(100vh - 108px);" data-folder="My Day">
    <div class="text-center mb-8 mt-8 text-2xl">📚 My Collections</div>
    <div id="myFoldersContainer" class="flex-grow overflow-y-auto myFoldersContainer flex text-start flex-col mt-4 mb-4 mr-2 text-xl ">
    {% for folder in folders %}
        <div class="flex justify-between items-center pl-8 pr-6 hover:bg-primary py-3">
            <a class="folder-item" data-id="{{ folder.id }}" href="#">{{ folder.name }}</a>
            <a href="#" data-id="{{folder.id}}" class="delete-folder text-gray-400 hover:text-white transition-colors duration-200">
                <i class="fa fa-trash"></i>
            </a>
        </div>
    {% endfor %}
    </div>
    <div class="flex flex-col mb-6 text-xl pt-4 border-t border-slate-400">
        <div class="flex flex-col">
        {% for folder in defaultFolders %}
            <a href="#" class="folder-item pl-8 py-3 hover:bg-primary" data-id="{{ folder.id }}">{{ folder.name }}</a>
        {% endfor %}
            <a href="#" class="folder-item pl-8 py-3 hover:bg-primary" data-id='important'>⭐ Important</a>
            
        </div>
    </div>
</div>

<style>
#myFoldersContainer::-webkit-scrollbar {
  width: 2px; 
}

#myFoldersContainer::-webkit-scrollbar-track {
  background: transparent; 
}

#myFoldersContainer::-webkit-scrollbar-thumb {
  background: gray;
  border-radius: 20px; 
}

#myFoldersContainer::-webkit-scrollbar-thumb:hover {
  background: darkgray;
}
</style>
