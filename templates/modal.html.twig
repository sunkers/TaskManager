<div 
  id="overlay" 
  class="fixed top-0 left-0 w-full h-full z-30" 
  {% if is_logged %}
  style="display: none;"
  {% endif %}
  >
</div>

<!-- Login Modal -->
<div 
  id="loginModal" 
  class="fixed top-0 left-0 w-full h-full flex items-center justify-center z-40" 
  {% if is_logged %}
  style="display: none;"
  {% endif %}
  >
    <form id="loginForm" class="tabContent">
      <div class="form-container w-100 rounded-xl bg-secondary p-8 text-white">
        <p class="text-center lg:text-xl text-4xl leading-8 font-bold lg:mb-3 mb-6">
          <a class="" id="loginTab" onclick="changeTab('login')">Login</a>
        </p>
          <div class="input-group mt-1 text-xl lg:text-sm leading-5">
            <label for="username" class="block text-gray-400 mb-1">Email</label>
            <input type="email" name="_username" id="username" placeholder="youremail@example.com" class="w-full rounded border border-blueGray-700 outline-none bg-blueGray-900 py-3 px-4 text-gray-200" required>
          </div>
          <div class="input-group mt-4 lg:mt-1 text-xl lg:text-sm leading-5">
            <label for="password" class="block text-gray-400 mb-1">Password</label>
            <input type="password" name="_password" id="password" placeholder="********" class="w-full rounded border border-blueGray-700 outline-none bg-blueGray-900 py-3 px-4 text-gray-200" required>
            <div class="forgot flex justify-end lg:text-xs text-base leading-4">
              <a rel="noopener noreferrer" href="#">Forgot Password ?</a>
            </div>
          </div>
          <button class="sign mb-4 lg:text-base text-2xl">Sign in</button>
          <span class="mt-8 lg:text-xs text-lg ">Don't have an account? <a href="#" class="switch font-bold" for="register_toggle">Sign Up</a> </span>
      </div>
    </form>

  <form id="signupForm" class="tabContent" style="display: none;">
      <div class="form-container w-100 rounded-xl bg-secondary p-8 text-white">
          <p class="text-center lg:text-xl text-4xl leading-8 font-bold lg:mb-3 mb-6">
              <a class="" id="signupTab" onclick="changeTab('signup')">Register</a>
          </p>
          <div class="input-group mt-1 text-xl lg:text-sm leading-5">
              <label for="signupEmail" class="block text-gray-400 mb-1">Email</label>
              <input type="email" name="signupEmail" id="signupEmail" placeholder="youremail@example.com" class="w-full rounded border border-blueGray-700 outline-none bg-blueGray-900 py-3 px-4 text-gray-200" required>
          </div>
          <div class="input-group mt-4 lg:mt-1 text-xl lg:text-sm leading-5">
              <label for="signupPassword" class="block text-gray-400 mb-1">Password</label>
              <input type="password" name="signupPassword" id="signupPassword" placeholder="********" class="w-full rounded border border-blueGray-700 outline-none bg-blueGray-900 py-3 px-4 text-gray-200" required>
          </div>
          <button class="sign my-8 lg:text-base text-2xl">Create an account</button>
          <span class="mt-8 lg:text-xs text-lg ">Already have an account? <a href="#" class="switch font-bold" for="register_toggle">Connect</a> </span>
      </div>
  </form>

</div>

{# <-- Create Modal --> #}
<div id="createModal" 
class="fixed top-0 left-0 w-full h-full flex items-center justify-center z-40" style="display: none;">
  <div class="form-container w-100 rounded-xl bg-secondary p-8 text-white flex flex-col items-center justify-center">
    <p class="text-center lg:text-2xl text-4xl leading-8 font-bold lg:mb-3 mb-6">
      Wanna create something ?
    </p>
    <button id="createCollectionButton" class="bg-highlight text-white min-w-[80%] lg:w-80 rounded px-4 py-2 my-2 lg:text-base text-2xl">+ Add New Collection üìó</button>
    <button id="createTaskButton" class="bg-highlight text-white rounded min-w-[80%] lg:w-80  px-4 py-2 my-2 lg:text-base text-2xl">+ Add New Task ‚úÖ</button>
