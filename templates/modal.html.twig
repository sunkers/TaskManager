{# <-- Create Task Modal --> #}
<div id="createTaskModal"
  class="fixed top-0 left-0 w-full h-full flex items-center justify-center z-40" style="display: none;">
  <div class="form-container lg:w-full rounded-xl bg-secondary p-8 text-white flex flex-col items-center justify-center">
    <p class="text-center lg:text-xl text-4xl leading-8 font-bold lg:mb-3 mb-6 lg:mx-0 mx-16 lg:mt-0 mt-4">
